<table class="table table-hover">
  <thead>
    <tr>
      <th> Name </th>
      <th> Symbol </th>
      <th> Last price </th>
      <% if @user.id == current_user.id %>
        <th> Actions </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>
        <% if @user.id == current_user.id %>
          <td> <%= link_to "Delete stock", user_stock_path(stock), method: :delete, class: "btn btn-xs btn-danger" %> </td>
        <% end %>
      </tr>
    <% end %>
</tbody>
</table>
